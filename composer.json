{
    "name": "postyou/contao-cookiebar-optin",
    "type": "contao-bundle",
    "description": "Extends the oveleon/contao-cookiebar with opt-in functionality for content elements.",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "POSTYOU Werbeagenur",
            "homepage": "https://www.postyou.de"
        }
    ],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "symfony/config": "^6.4",
        "symfony/dependency-injection": "^6.4",
        "symfony/http-kernel": "^6.4",
        "oveleon/contao-cookiebar": "^2.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^6.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-symfony": "^1.3"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Postyou\\ContaoCookiebarOptin\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Postyou\\ContaoCookiebarOptin\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "composer/package-versions-deprecated": true,
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
